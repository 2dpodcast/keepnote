#!/usr/bin/env python


import sys

# pygtk imports
import pygtk
pygtk.require('2.0')
import gtk

import takenotelib as takenote
import takenotelib.gui as gui


#=============================================================================

def main():
    gtk.main()


if __name__ == "__main__":
    app = gui.TakeNote()
    
    if len(sys.argv) > 1:
        app.open_notebook(sys.argv[1])
    main()
