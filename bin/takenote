#!/usr/bin/env python


import sys, os

# pygtk imports
import pygtk
pygtk.require('2.0')
import gtk

basedir = os.path.dirname(os.path.realpath(sys.argv[0]))
basedir = os.path.join(basedir, "..")

try:
    import takenotelib as takenote
except ImportError:
    sys.path.append(basedir)
    import takenotelib as takenote
    
import takenotelib.gui as gui


#=============================================================================

def main():
    gtk.main()


if __name__ == "__main__":
    app = gui.TakeNote(basedir)
    
    if len(sys.argv) > 1:
        app.open_notebook(sys.argv[1].rstrip("/"))
    main()
